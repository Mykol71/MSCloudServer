#!/usr/bin/bash

# verify root
ID=$(/usr/bin/id -u)
[ $ID -ne 0 ] && echo "You must be root to run $0." && exit 1

ROOTDIR="$(pwd)"
export ROOTDIR

trap '' 2
while :; do
	clear
	echo "********************************"
	echo "** Linux Admin Tasks           *"
	echo "********************************"
	echo "* [1] Configure Sendgrid Relay *"
	echo "* [2] Convert to CentOS        *"
	echo "* [3] Daisy migration script   *"
	echo "*                              *"
	echo "* [d] Documentation            *"
	echo "* [x] Exit                     *"
	echo "********************************"
	echo -n "Enter selection: "
	read selection
	case $selection in
	1)
		cd $ROOTDIR/bin
		cat ./config_sendgrid
		echo "Run it? y/n: "
		read runit
		[ "$runit" == "y|Y" ] && time ./config_sendgrid
		cd -
		echo "Press enter to continue.."
		read
		;;
	2)
		cd $ROOTDIR/bin
		cat ./convert_centos
		echo "Run it? y/n: "
		read runit
		[ "$runit" == "y|Y" ] && time ./convert_centos
		cd -
		echo "Press enter to continue.."
		read
		;;
	3)
		cd $ROOTDIR/bin
		cat ./erik_mig.sh
		echo "Run it? y/n: "
		read runit
		[ "$runit" == "y|Y" ] && time ./erik_mig.sh
		cd -
		echo "Press enter to continue.."
		read
		;;
	d)
		./readme.sh
		echo "Press enter to continue.."
		read
		;;
	x) exit ;;
	*) ;;
	esac
done
