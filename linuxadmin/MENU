#!/usr/bin/bash

# verify root
ID=$(/usr/bin/id -u)
[ $ID -ne 0 ] && echo "You must be root to run $0." && exit 1

ROOTDIR="$(pwd)"
export ROOTDIR

trap '' 2
while :; do
	clear
	echo "********************************"
	echo "** Linux Admin                 *"
	echo "********************************"
	echo "* [1] Configure Sendgrid Relay *"
	echo "*                              *"
	echo "* [d] Documentation            *"
	echo "* [x] Exit                     *"
	echo "********************************"
	echo -n "Enter selection: "
	read selection
	case $selection in
	1)
		cd $ROOTDIR/bin
		./config_sendgrid
		cd -
		;;
	d)
		./readme.sh
		echo "Press enter to continue.."
		read
		;;
	x) exit ;;
	*) ;;
	esac
done
