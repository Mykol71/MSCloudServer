#!/usr/bin/bash

# verify root
ID=$(/usr/bin/id -u)
[ $ID -ne 0 ] && echo "You must be root to run $0." && exit 1

ROOTDIR="$(pwd)"
export ROOTDIR

trap '' 2
while :; do
	clear
echo -en "$(date +%T)\n"
printf '\u250f''\u2501''\u2501''\u2501''\u2501''\u2501''\u2501''\u2501''\u2501''\u2501''\u2501''\n'
printf '\u2503''\033[1m Linux Admin Tasks\033[0m''\n'
printf '\u2523''\u2501''\n'
printf '\u2503''\033[1m'" 1.\033[0m Configure Sendgrid Relay"'\n'
printf '\u2503''\033[1m'" 2.\033[0m Convert to CentOS"'\n'
printf '\u2503''\033[1m'" 3.\033[0m Daisy Conversion Script"'\n'
printf '\u2503''\n'
printf '\u2503''\n'
printf '\u2503''\n'
printf '\u2503''\n'
printf '\u2503''\n'
printf '\u2503''\n'
printf '\u2503''\n'
printf '\u2503''\n'
printf '\u2503''\n'
printf '\u2503''\n'
printf '\u2503''\n'
printf '\u2503''\n'
printf '\u2503''\033[1m'" d.\033[0m About"'\n'
printf '\u2503''\033[1m'" x.\033[0m Exit"'\n'
printf '\u2517''\u2501''\n'
	echo -n "Enter selection: "
	read selection
	case $selection in
	1)
		cd $ROOTDIR/bin
		cat ./config_sendgrid
		echo "Scared ya huh? :)"
		echo "Run it? y/n: "
		read runit
		[ "$runit" == "y|Y" ] && time ./config_sendgrid
		cd -
		echo "Press enter to continue.."
		read
		;;
	2)
		cd $ROOTDIR/bin
		cat ./convert_centos
		echo "Run it? y/n: "
		read runit
		[ "$runit" == "y|Y" ] && time ./convert_centos
		cd -
		echo "Press enter to continue.."
		read
		;;
	3)
		cd $ROOTDIR/bin
		cat ./erik_mig.sh
		echo "Run it? y/n: "
		read runit
		[ "$runit" == "y|Y" ] && time ./erik_mig.sh
		cd -
		echo "Press enter to continue.."
		read
		;;
	d)
		./readme.sh
		echo "Press enter to continue.."
		read
		;;
	x) exit ;;
	*) ;;
	esac
done
