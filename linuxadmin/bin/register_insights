#!/bin/bash

# TF POS Linux insights registration.

# verify root
ID=`/usr/bin/id -u`
[ $ID -ne 0 ] && echo "You must be root to run $0." && exit 1

# install insights rpm.
yum -y insights-client
[ $? -ne 0 ] && echo "Could not install insights client." && exit 2

# make config changes to conf.
sed -i '/\#authmethod=BASIC/authmethod=BASIC' /etc/insights-client/insights-client.conf
sed -i '/\#username=/username=michael_green' /etc/insights-client/insights-client.conf
sed -i '/\#password=/password=1971Dandy\!' /etc/insights-client/insights-client.conf
[ $? -ne 0 ] && echo "Could not update conf file." && exit 3

# register.
insights-client --register
[ $? -ne 0 ] && echo "Could not register." && exit 4

exit 0
