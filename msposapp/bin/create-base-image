#!/usr/bin/bash

echo -n "daisy, rti, or dove?: "
read POSTYPE

rm -rf /var/tmp/containers
rm -f /var/tmp/centos*xz

if [ "$POSTYPE" == "rti" ]; then
./containerbuild.sh centos7-rti.ks 2>/tmp/build-rti-container.error.log
docker image save centos7:latest > /var/tmp/centos7-rti.tar.xz
./create-rti-image 2>/tmp/create-rti-image.error.log
fi

if [ "$POSTYPE" == "daisy" ]; then
./containerbuild.sh centos7-daisy.ks 2>/tmp/build-daisy-container.error.log
docker image save centos7:latest > /var/tmp/centos7-daisy.tar.xz
./create-daisy-image 2>/tmp/create-daisy-image.error.log
fi

if [ "$POSTYPE" == "dove" ]; then
[ ! -d /var/tmp/win10-dovepos ] && mkdir /var/tmp/win10-dovepos
cp ./win10-dockerfile /var/tmp/win10-dovepos/Dockerfile
cp ./startup.sh /var/tmp/win10-dovepos/startup.sh
#cp ../files/*.exe /var/tmp/win10-dovepos/.
cd /var/tmp/win10-dovepos
docker build -t win10dove:latest -f Dockerfile . 2>/tmp/build-dove-container.error.log
docker image save win10dove:latest > /var/tmp/win10-dovepos.tar.xz
cd -
fi
