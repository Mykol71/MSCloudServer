#!/usr/bin/bash

# verify root
ID=`/usr/bin/id -u`
[ $ID -ne 0 ] && echo "You must be root to run $0." && exit 1

# check for running container
if [ -f ./.container ]; then
  CONTAINER="`cat .container`"
else
  echo "No Running Container!"
  exit 1
fi

docker exec $CONTAINER systemctl stop ipsec
docker exec $CONTAINER rm /etc/ipsec.d/*.conf
docker exec $CONTAINER rm /etc/ipsec.secrets
rm -f ./ipsec.conf
rm -f ./ipsec.secrets
