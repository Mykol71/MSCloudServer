echo -n "rhel or centos?:" 
read selection
if [ $selection == "rhel" ]; then
docker pull rhel7
rm -rf /var/tmp/containers/`date +%Y%m%d`/rhel7-rti-docker
./containerbuild-rhel7.sh rhel7-rti-docker.ks
cat /var/tmp/containers/`date +%Y%m%d`/rhel7-rti-docker/docker/rhel7-rti-docker-docker.tar.xz | docker import - rhel7-rti
fi
if [ $selection = "centos" ]; then
rm -rf /var/tmp/containers/`date +%Y%m%d`/centos7-rti-docker
./containerbuild-centos7.sh centos7-rti-docker.ks
cat /var/tmp/containers/`date +%Y%m%d`/centos7-rti-docker/docker/centos7-rti-docker-docker.tar.xz | docker import - centos7-rti
fi
