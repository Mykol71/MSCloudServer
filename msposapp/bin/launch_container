#!/usr/bin/bash

#echo -n "rhel or centos?: "
#read OS
OS=rhel
echo -n "Enter Shop Code: "
read selection
echo -n "Daisy or RTI?: "
read postype
[ "$postype" == "RTI" ] && POSDIR=usr2
[ "$postype" == "Daisy" ] && POSDIR=d
CONTAINER=`docker run --privileged -i -d -t --name=${selection}.teleflora.com -v "${POSDIR}:/${POSDIR}" -i ${selection}.teleflora.com /usr/sbin/init`
docker exec $CONTAINER echo export TERM=linux >/etc/profile.d/rti-term.sh
echo "$CONTAINER">${selection}.container
