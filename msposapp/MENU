#!/bin/bash

trap '' 2
while :
do
#clear
echo "*************************************"
echo "***** POS Application Service *******"
echo "*************************************"
echo "* [e] List EC2 instances            *"
echo "* [s] Start container               *"
echo "* [a] Attach to a container         *"
echo "* [b] Build/import an RTI container *"
echo "* [l] List containers               *"
echo "* [c] create customer VPN access    *"
echo "* [v] list customer Vpns            *"
echo "* [a] About                         *"
echo "* [x] eXit                          *"
echo "*************************************"
echo "Enter selection [e,s,a,b,l,c,v,a,x]: "
read selection
case $selection in
e) ./bin/container_status ; echo "Press enter to continue.." ; read  ;;
s) ./bin/launch_container ; echo "Press enter to continue.." ; read  ;;
a) ./bin/attach_container ; echo "Press enter to continue.." ; read  ;;
b) cd bin ; ./build_container ; cd .. ; echo "Press enter to continue.." ; read  ;;
l) ./bin/list_containers ; echo "Press enter to continue.." ; read  ;;
c) ./bin/create_vpn ; echo "Press enter to continue.." ; read  ;;
v) ./bin/list_vpns ; echo "Press enter to continue.." ; read  ;;
a) cat ./README.md ; echo "Press enter to continue.." ; read ;;
x) exit ;;
*) ;;
esac
done
