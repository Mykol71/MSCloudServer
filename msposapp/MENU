#!/usr/bin/bash

# verify root
ID=`/usr/bin/id -u`
[ $ID -ne 0 ] && echo "You must be root to run $0." && exit 1

trap '' 2
while :
do
echo "*************************************"
echo "***** POS Application Service *******"
echo "*************************************"
echo "** Development/Manage **            *"
echo "* [1] List Running Containers       *"
echo "* [2] Start Container               *"
echo "* [3] Stop Container                *"
echo "* [4] Attach to a Container         *"
echo "* [5] Build a Base OS Image         *"
echo "* [6] Build an RTI Container        *"
echo "* [7] List Images                   *"
echo "* [8] Update Local OS Image         *"
echo "* [9] Wipe All OS Images            *"
echo "*                                   *"
echo "** Production ** (Costs \$)          *"
echo "* [11] EC2 Instance Status          *"
echo "* [12] Build an EC2 Instance        *"
echo "* [13] Start an EC2 Instance        *"
echo "* [14] Stop an EC2 Instance         *"
echo "* [15] Upload a Florist Container   *"
echo "* [16] Delete a Florist Container   *"
echo "* [17] Create Florist VPN Access    *"
echo "* [18] List Florist VPN             *"
echo "* [19] Delete Florist VPN Access    *"
echo "*                                   *"
echo "* [a] About                         *"
echo "* [x] Exit                          *"
echo "*************************************"
echo "Enter selection: "
read selection
case $selection in
1) cd $ROOTDIR/msposapp/bin ; ./container_status ; echo "Press enter to continue.." ; read  ; cd - ;;
2) cd $ROOTDIR/msposapp/bin ; ./launch_container ; echo "Press enter to continue.." ; read  ; cd - ;;
3) cd $ROOTDIR/msposapp/bin ; ./stop_container ; echo "Press enter to continue.." ; read  ; cd - ;;
4) cd $ROOTDIR/msposapp/bin ; ./attach_container ; echo "Press enter to continue.." ; read  ; cd - ;;
5) cd $ROOTDIR/msposapp/bin ; ./create-base-image ;  echo "Press enter to continue.." ; read  ; cd - ;;
6) cd $ROOTDIR/msposapp/bin ; ./create-rti-container ;  echo "Press enter to continue.." ; read  ; cd - ;;
7) cd $ROOTDIR/msposapp/bin ; ./list_image ; echo "Press enter to continue.." ; read  ; cd - ;;
8) cd $ROOTDIR/msposapp/bin ; ./pull-os-image ; echo "Press enter to continue.." ; read  ; cd - ;;
9) cd $ROOTDIR/msposapp/bin ; ./wipe_images ; echo "Press enter to continue.." ; read  ; cd - ;;
11) cd $ROOTDIR/msposapp/bin ; ./list_ec2_instances ; echo "Press enter to continue.." ; read  ; cd - ;;
12) cd $ROOTDIR/msposapp/bin ; ./create_ec2_instance ; echo "Press enter to continue.." ; read  ; cd - ;;
13) cd $ROOTDIR/msposapp/bin ; ./start_ec2_instance ; echo "Press enter to continue.." ; read  ; cd - ;;
14) cd $ROOTDIR/msposapp/bin ; ./stop_ec2_instance ; echo "Press enter to continue.." ; read  ; cd - ;;
15) cd $ROOTDIR/msposapp/bin ; ./delete_ec2_instance ; echo "Press enter to continue.." ; read  ; cd - ;;
14) cd $ROOTDIR/msposapp/bin ; ./create_vpn ; echo "Press enter to continue.." ; read  ; cd - ;;
15) cd $ROOTDIR/msposapp/bin ; ./list_vpns ; echo "Press enter to continue.." ; read  ; cd - ;;
a) cat ./README.md ; echo "Press enter to continue.." ; read ;;
x) exit ;;
*) ;;
esac
done
