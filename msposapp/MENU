#!/bin/bash
echo $ROOTDIR

trap '' 2
while :
do
#clear
echo "*************************************"
echo "***** POS Application Service *******"
echo "*************************************"
echo "* [e] List EC2 instances            *"
echo "* [s] Start container               *"
echo "* [a] Attach to a container         *"
echo "* [b] Build/import an RTI container *"
echo "* [l] List containers               *"
echo "* [c] create customer VPN access    *"
echo "* [v] list customer Vpns            *"
echo "* [a] About                         *"
echo "* [x] eXit                          *"
echo "*************************************"
echo "Enter selection [e,s,a,b,l,c,v,a,x]: "
read selection
case $selection in
e) cd $ROOTDIR/msposapp/bin ; ./container_status ; echo "Press enter to continue.." ; read  ; cd - ;;
s) cd $ROOTDIR/msposapp/bin ; ./launch_container ; echo "Press enter to continue.." ; read  ; cd - ;;
a) cd $ROOTDIR/msposapp/bin ; ./attach_container ; echo "Press enter to continue.." ; read  ; cd - ;;
b) cd $ROOTDIR/msposapp/bin ; ./build_container ;  echo "Press enter to continue.." ; read  ; cd - ;;
l) cd $ROOTDIR/msposapp/bin ; ./list_containers ; echo "Press enter to continue.." ; read  ; cd - ;;
c) cd $ROOTDIR/msposapp/bin ; ./create_vpn ; echo "Press enter to continue.." ; read  ; cd - ;;
v) cd $ROOTDIR/msposapp/bin ; ./list_vpns ; echo "Press enter to continue.." ; read  ; cd - ;;
a) cat ./README.md ; echo "Press enter to continue.." ; read ;;
x) exit ;;
*) ;;
esac
done
