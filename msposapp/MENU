#!/usr/bin/bash

# verify root
ID=`/usr/bin/id -u`
[ $ID -ne 0 ] && echo "You must be root to run $0." && exit 1

ROOTDIR="`pwd`"
export ROOTDIR

#figure out why I have to do the next command manually
#scl enable python27 /usr/bin/bash

trap '' 2
while :
do
clear
echo "**************************************"
echo "***** POS Application Service ********"
echo "**************************************"
echo "** Start a Florist Now! **           *"
echo "** Option: 115, 112 **               *"
echo "*                                    *"
echo "** Containers **                     *"
echo "* [1] List Running Containers        *"
echo "* [2] Start Container                *"
echo "* [3] Stop Container(s)              *"
echo "* [4] Attach to a Container          *"
echo "* [5] List Network Interfaces        *"
echo "*                                    *"
echo "** Images **                         *"
echo "* [11] Build an OS Image             *"
echo "* [12] Stage an RTI Image            *"
echo "* [13] List Images                   *"
echo "* [14] Delete Image(s)               *"
echo "*                                    *"
echo "** Instances **                      *"
echo "* [111] List Instances               *"
echo "* [112] Start an Instance            *"
echo "* [113] Stop an Instance             *"
echo "* [114] List VPNs                    *"
echo "* [115] Create VPN Access            *"
echo "* [116] Remove VPN Access            *"
echo "*                                    *"
echo "* [a]  About                         *"
echo "* [x]  Exit                          *"
echo "**************************************"
echo -n "Enter selection: "
read selection
case $selection in
1) cd $ROOTDIR/bin ; ./container_status ; echo "Press enter to continue.." ; read  ; cd - ;;
2) cd $ROOTDIR/bin ; ./launch_container ; echo "Press enter to continue.." ; read  ; cd - ;;
3) cd $ROOTDIR/bin ; ./stop_container ; echo "Press enter to continue.." ; read  ; cd - ;;
4) cd $ROOTDIR/bin ; ./attach_container ; echo "Press enter to continue.." ; read  ; cd - ;;
5) cd $ROOTDIR/bin ; ./list_nics ;  echo "Press enter to continue.." ; read  ; cd - ;;
11) cd $ROOTDIR/bin ; ./create-base-image ;  echo "Press enter to continue.." ; read  ; cd - ;;
12) cd $ROOTDIR/bin ; ./create-florist-image ;  echo "Press enter to continue.." ; read  ; cd - ;;
#13) cd $ROOTDIR/bin ; ./stage-image ; echo "Press enter to continue.." ; read  ; cd - ;;
13) cd $ROOTDIR/bin ; ./list_image ; echo "Press enter to continue.." ; read  ; cd - ;;
14) cd $ROOTDIR/bin ; ./wipe_images ; echo "Press enter to continue.." ; read  ; cd - ;;
111) cd $ROOTDIR/bin ; ./list_ec2_instances ; echo "Press enter to continue.." ; read  ; cd - ;;
112) cd $ROOTDIR/bin ; ./start_ec2_instance ; echo "Press enter to continue.." ; read  ; cd - ;;
113) cd $ROOTDIR/bin ; ./stop_ec2_instance ; echo "Press enter to continue.." ; read  ; cd - ;;
114) cd $ROOTDIR/bin ; ./list_vpns ; echo "Press enter to continue.." ; read  ; cd - ;;
115) cd $ROOTDIR/bin ; ./create_vpn ; echo "Press enter to continue.." ; read  ; cd - ;;
116) cd $ROOTDIR/bin ; ./delete_vpn ; echo "Press enter to continue.." ; read  ; cd - ;;
a) cat ./README.md ; echo "Press enter to continue.." ; read ;;
x) exit ;;
*) ;;
esac
done
