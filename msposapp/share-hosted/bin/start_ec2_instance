#!/usr/bin/bash

#get info
echo -n "ShopCode: "
read CODE
echo -n "centos or rhel?: "
read OS

#upload florist container

#get temp login info from AWS
LOGININFO=`aws ecr get-login --no-include-email --region us-west-2`

#login with the info from above
`$LOGINIFO`

docker tag $CODE.teleflora.com 239094452516.dkr.ecr.us-west-2.amazonaws.com/rti-rhel7

docker push 239094452516.dkr.ecr.us-west-2.amazonaws.com/rti-rhel7

#policy configured in AWS will start the pushed image.
