#!/usr/bin/bash

# verify root
ID=$(/usr/bin/id -u)
[ $ID -ne 0 ] && echo "You must be root to run $0." && exit 1

ROOTDIR="$(pwd)"
export ROOTDIR

#figure out why I have to do the next command manually
#scl enable python27 /usr/bin/bash

trap '' 2
while :; do
	clear
echo -en "$(date +%T)\n"
printf '\u250f''\u2501''\u2501''\u2501''\u2501''\u2501''\u2501''\u2501''\u2501''\u2501''\u2501''\n'
printf '\u2503''\033[1m CentOS Repo Menu\033[0m''\n'
printf '\u2523''\u2501''\n'
printf '\u2503'" Status: `systemctl status httpd | grep Active | cut -d" " -f5`"'\n'
printf '\u2503''\n'
printf '\u2503''\033[1m'" 1.\033[0m Start Repo"'\n'
printf '\u2503''\033[1m'" 2.\033[0m Stop Repo"'\n'
printf '\u2503''\033[1m'" 3.\033[0m Update Repo"'\n'
printf '\u2503''\033[1m'" 4.\033[0m Promote to Prod"'\n'
printf '\u2503''\n'
printf '\u2503''\n'
printf '\u2503''\n'
printf '\u2503''\n'
printf '\u2503''\n'
printf '\u2503''\n'
printf '\u2503''\n'
printf '\u2503''\n'
printf '\u2503''\033[1m'" i.\033[0m I/C/U Deps"'\n'
printf '\u2503''\033[1m'" d.\033[0m About"'\n'
printf '\u2503''\033[1m'" x.\033[0m Exit"'\n'
printf '\u2517''\u2501''\n'
	echo -n "Enter selection: "
	read selection
	case $selection in
	i)
		cd $ROOTDIR/bin
		./install_deps
		echo "Press enter to continue.."
		read
		cd -
		;;
	1)
		cd $ROOTDIR/bin
		./start_repo
		echo "Press enter to continue.."
		read
		cd -
		;;
	2)
		cd $ROOTDIR/bin
		./stop_repo
		echo "Press enter to continue.."
		read
		cd -
		;;
	3)
		cd $ROOTDIR/bin
		./update_centos_mirrors
		echo "Press enter to continue.."
		read
		cd -
		;;
	4)
		cd $ROOTDIR/bin
		./promote_prod_repo
		echo "Press enter to continue.."
		read
		cd -
		;;
	d)
		./readme.sh | more
		echo "Press enter to continue.."
		read
		cd -
		;;
	x) exit ;;
	*) ;;
	esac
done
