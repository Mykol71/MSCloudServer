#!/bin/bash

trap '' 2
while :
do
clear
echo "********************************"
echo "** Managed Services Cloud Menu *"
echo "********************************"
echo "* [b] POS Backup service       *"
echo "* [c] POS Container service    *"
echo "* [s] Status                   *"
echo "* [a] About                    *"
echo "* [d] install/configure Deps.  *"
echo "* [x] eXit                     *"
echo "********************************"
echo -n "Enter selection [b,c,s,a,d,x]: "
read selection
case $selection in
b) cd msposbackup ; ./MENU ;;
c) cd msposcontainer ; ./MENU ;;
s) echo "status here" ; echo "Press enter to continue.." ; read ;;
a) cat ./README.md ; echo "Press enter to continue.." ; read ;;
d) ./bin/install ; echo "Press enter to continue.." ; read  ;;
x) exit ;;
*) ;;
esac
done
