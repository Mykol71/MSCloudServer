#!/bin/bash

trap '' 2
while :
do
clear
echo "********************************"
echo "** Managed Services AWS Menu ***"
echo "********************************"
echo "* [c] Container service        *"
echo "* [b] Backup service           *"
echo "* [s] Status                   *"
echo "* [a] About                    *"
echo "* [i] Install dependancies     *"
echo "* [x] eXit                     *"
echo "********************************"
echo -n "Enter selection [c,b,s,a,i,x]: "
read selection
case $selection in
c) cd tfmscontainerserve ; ./MENU ; echo "Press enter to continue.." ; read ;;
b) cd tfmscloudbackup ; ./MENU ; echo "Press enter to continue.." ; read ;;
a) cat ./doc/about.txt ; echo "Press enter to continue.." ; read ;;
i) ./bin/install ; echo "Press enter to continue.." ; read  ;;
x) exit ;;
*) ;;
esac
done
