#!/bin/bash

# verify root
ID=$(/usr/bin/id -u)
[ $ID -ne 0 ] && echo "You must be root to run $0." && exit 1

ROOTDIR="$(pwd)"
export ROOTDIR
[ ! -d /backups ] && mkdir /backups

trap '' 2
while :; do
    LGGRN='\033[1;32m'
    BLUE='\033[1;34m'
    GREY='\033[0;37m'
    CYAN='\033[1;36m'
    NC='\033[0m'
    clear


    echo -e "${BLUE} $(date +'%x %l:%M %p')${NC}"
    printf '\u250f''\u2501''\u2501''\u2501''\u2501''\u2501''\u2501''\u2501''\u2501''\n'
    printf '\u2503'ðŸŒ·${GREY}' MS Cloud Menu'${NC}'\n'
    printf '\u2523''\u2501''\n'
    printf '\u2503''\033[1m'" 1.\033[0m Backup Service"'\n'
    printf '\u2503''\033[1m'" 2.\033[0m POS Service"'\n'
    printf '\u2503''\033[1m'" 3.\033[0m CentOS Repo"'\n'
    printf '\u2503''\033[1m'" 4.\033[0m Admin Tasks"'\n'
    printf '\u2503''\n'
    printf '\u2503''\033[1m'" r.\033[0m Readme"'\n'
    printf '\u2503''\033[1m'" x.\033[0m Exit"'\n'
    printf '\u2517''\u2501''\n'
	echo -ne "${CYAN}Enter selection:${NC} "
	read selection
	case $selection in
	1)
		cd $ROOTDIR/msposbackup
		./MENU
		cd -
		;;
	2)
		cd $ROOTDIR/msposapp
		./MENU
		cd -
		;;
	3)
		cd $ROOTDIR/tfmscentos
		./MENU
		cd -
		;;
	4)
		cd $ROOTDIR/linuxadmin
		./MENU
		cd -
		;;
	r)
		cat ./README.md | more
		;;
	x)	exit
		;;
	*) ;;
	esac
done
